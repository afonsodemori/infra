root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = space
indent_size = 4

[{*.{js,jsx,ts,tsx,json,css,scss,html,yaml,yml,md},Dockerfile}]
indent_size = 2

[*.conf]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false
