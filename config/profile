# export LC_ALL="en_US.UTF-8"
export LANG="en_US.UTF-8"
export LANGUAGE="en_US.UTF-8"

function _ps1_check() {
  if [[ "$?" -ne 0 ]]; then
    local icons=('ðŸ‘Ž' 'ðŸ¤·' 'ðŸ¤®' 'ðŸŽƒ' 'ðŸ¤¦' 'ðŸš¨' 'ðŸ¤¡' 'ðŸ˜’' 'ðŸ¤¬' 'ðŸ’©')
    local index=$((RANDOM % ${#icons[@]}))

    printf '%s\n\a' "${icons[$index]}"
  fi
}

PS1='\n$(_ps1_check)'
PS1+='\[\033[0;32m\]\u\[\e[m\]\[\033[0;32m\]@`hostname -f`\[\e[m\] '
PS1+='âžœ \[\033[1;34m\]\w\[\e[m\]\n\[\033[0;33m\]\$\[\e[m\] '

alias ls='ls -h --color'
alias grep='grep --color'
alias fgrep='fgrep --color'
alias egrep='egrep --color'

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias c='clear'
alias p='pwd'
alias q='exit'

# GIT COMMANDS

alias gs='git status'
